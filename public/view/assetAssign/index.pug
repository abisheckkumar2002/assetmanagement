extends ../layout/layout

block content
  style.
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }
     .header {
      background-color: #2F3C7E;
      color: #FBEAEB;
      padding: 15px;
      border-radius: 5px;
      margin-bottom: 20px;
      margin-top: 10px;
    }

     .btn-container button {
      color:white;
       background:#2F3C7E;
      
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 25px;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 12px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
    .btn {
      padding: 10px 20px;
      border: 2px;
      border-radius: 3px;
      cursor: pointer;
      margin-right: 5px;
      font-size: 15px;
    }
    .btn-primary {
      background-color: #007bff;
      color: white;
    }
    .btn-container {
      text-align: center;
    }
    .tittle {
      text-align: center;
    }

    /* Navbar styles */
    .navbar-nav {
      list-style-type: none;
      padding-left: 0;
      display: flex; /* Horizontal layout */
    }
    .navbar-nav .nav-item {
      margin-right: 20px;
    }
    .nav-link {
      font-size: 20px;
      text-decoration: none;
      color: black;
    }

    .nav-item.active .nav-link {
      text-decoration: underline; 
    }

  .header
    h2 ASSET ISSUE LIST

  
  table
    thead
      tr
        th.tittle S.NO
        th.tittle EMP ID
        th.tittle FirstName
        th.tittle Asset Name
       
    tbody
     
      each datum, index in data
        tr
          td #{index + 1}
          td #{datum.employeeId}
          td #{datum.employee && datum.employee.firstName ? datum.employee.firstName : '--'}
          td #{datum.Asset.name}
          
      
     


