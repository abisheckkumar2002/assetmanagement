  .bttt
    a.btn.btn-primary(href="/users") Back

  .header
    h2 Assign Asset

  .container
    form(action="/assetStatus/" method="post")

      

      .form-group
        label(for="employeeId") Employee:
        select#branch(name="employeeId" required)
          option(value="") -- Select Branch -- 
          if employee && employee.length > 0 
            each item in employee
              option(value=item.id) #{item.firstName}
          else
            option(value="") No employee available
      .form-group
        label(for="assetId") Asset:
        select#branch(name="assetId" required)
          option(value="") -- Select Asset -- 
          if asset && asset.length > 0 
            each item in asset
              option(value=item.id) #{item.name}
          else
            option(value="") No Asset available
      

      .btn-container
        button.btn.btn-primary(type="submit") Add
