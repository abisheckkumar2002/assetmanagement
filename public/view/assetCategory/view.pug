extends ../layout/layout

block content
  style.
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }
    .header {
      background-color: #007bff;
      color: white;
      padding: 15px;
      border-radius: 5px;
      margin-bottom: 20px;
      margin-top: 10px;
    }
    .container {
      max-width: 1500px;
    
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      
    }
    .details-group {
      margin-bottom: 15px;
      display: flex;
      align-items: center;
    }
    .details-group label {
      font-weight: bold;
      margin-right: 10px;
      flex: 0 0 150px; /* Fixed width for labels */
    }
    .details-group span {
      font-size: 16px;
      color: #333;
    }
    .btn {
      padding: 10px 20px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      margin-right: 5px;
    }
    .btn-primary {
      background-color: #007bff;
      color: white;
    }
    .btn-secondary {
      background-color: #6c757d;
      color: white;
    }
    .btn-container {
      text-align: right;
      margin-top: 20px;
    }
    .bttt {
      margin-top: 20px;
      margin-bottom: 30px;
      text-align: left;
    }

  body
    .bttt
      a.btn.btn-primary(href="/users") Back
    .header
      h2 View Student Details
    .container
      .details-group
        label FirstName:
        span #{data.firstName}
      .details-group
        label LastName:
        span #{data.lastName}
      .details-group
        label Phone Number:
        span #{data.phoneNo}
      .details-group
        label Email:
        span #{data.email}
      .details-group
        label Address:
        span #{data.address}
     
